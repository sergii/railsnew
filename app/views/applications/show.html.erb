<% if notice.present? %>
  <div popover class="flash" style="--flash-position: 5rem;" data-controller="element-removal" data-action="animationend->element-removal#remove" role="alert"><%= notice %></div>
<% end %>

<%= render @application %>

<div class="flex flex-wrap items-center gap mbs-6" style="--row-gap: .5rem">
  <%= link_to "Edit this application", edit_application_path(@application), class: "btn" %>
  <%= link_to "Back to applications", applications_path, class: "btn" %>
  <%= button_to "Destroy this application", @application, method: :delete, class: "btn" %>
</div>
