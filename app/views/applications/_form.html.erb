<%= form_with(model: application, html: { contents: true }) do |form| %>
  <% if application.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :slug, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :slug, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :rails_version, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :rails_version, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :repository_url, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :repository_url, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :status, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :status, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :generator_option_id, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :generator_option_id, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :template_id, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :template_id, class: "input" %>
  </div>

  <div class="inline-flex items-center mbs-2 mie-1">
    <%= form.submit class: "btn btn--primary" %>
  </div>
<% end %>
