<% if notice.present? %>
  <div popover class="flash" style="--flash-position: 5rem;" data-controller="element-removal" data-action="animationend->element-removal#remove" role="alert"><%= notice %></div>
<% end %>

<%= render @generator_option %>

<div class="flex flex-wrap items-center gap mbs-6" style="--row-gap: .5rem">
  <%= link_to "Edit this generator option", edit_generator_option_path(@generator_option), class: "btn" %>
  <%= link_to "Back to generator options", generator_options_path, class: "btn" %>
  <%= button_to "Destroy this generator option", @generator_option, method: :delete, class: "btn" %>
</div>
