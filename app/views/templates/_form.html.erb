<%= form_with(model: template, html: { contents: true }) do |form| %>
  <% if template.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(template.errors.count, "error") %> prohibited this template from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% template.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :slug, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :slug, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :path, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :path, class: "input" %>
  </div>

  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :description, class: "text-sm font-medium leading-none" %>
    <%= form.textarea :description, rows: "auto", class: "input" %>
  </div>

  <div class="inline-flex items-center mbs-2 mie-1">
    <%= form.submit class: "btn btn--primary" %>
  </div>
<% end %>
